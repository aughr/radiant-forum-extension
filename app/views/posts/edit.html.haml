- content_for :form do
  = render :partial => 'form'

- content_for :pagetitle do
  - if @page
    = t('edit_comment')
  - elsif @topic 
    = t('edit_reply')
  - else
    = t('edit_topic')

- content_for :breadhead do
  - if @page
    = link_to @page.title, @page.url, :class => 'breadhead'
  - elsif @topic 
    = link_to @topic.name, forum_topic_url(@topic.forum, @topic), :class => 'breadhead'
  - else
    = link_to @forum.name, forum_url(@topic.forum), :class => 'breadhead'



