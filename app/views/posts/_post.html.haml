- post ||= @post
- first ||= false
- headless ||= first
  
.post{:id => post.dom_id}
  - if post.frozen?
    .post_removal
      %p.confirmation
        = t("post_removed")
  - else
    .post_wrapper{:class => post.first? ? "first" : "reply"}
      - unless headless
        .speaker
          = standard_gravatar_for(post.reader)
      .post_header
        - unless headless
          %h2
            = post.reader.name
        %p.context
          = friendly_date(post.created_at)
          = render :partial => 'posts/edit_links', :locals => {:post => post}
      .post_body
        = clean_textilize(post.body)
        = render :partial => 'posts/attachments', :locals => {:post => post}
