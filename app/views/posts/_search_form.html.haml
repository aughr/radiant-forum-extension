- minimal ||= false

%form.friendly{:action => posts_url, :method => :get}
  - unless minimal
    %h2
      =t('forum.search_header')

  %p
    %label{:for => "q"}
      = t(minimal ? 'forum.search_form.minimal_query_label' : 'forum.search_form.query_label')
    = text_field_tag "q", params[:q]

  - unless minimal
    %p
      %label{:for => "forum_id"}
        = t('forum.search_form.forum_label')
      
      %select{:name => "forum_id"}
        %option{:value => ""}= t('forum.anywhere')
        = options_from_collection_for_select(Forum.find(:all), "id", "name", params[:forum_id].to_i)

    - if Radiant::Config['forum.allow_search_by_reader?']
      %p
        %label{:for => "reader_id"}
          = t('forum.search_form.person_label')
        %select{:name => "reader_id"}
          %option{:value => ""}
            =t('forum.anyone')
          = options_from_collection_for_select(Reader.find(:all), "id", "name", params[:reader_id].to_i)

  %p.buttons
    %input{:type => 'submit', :value => "Search"}
